#include<iostream>

#include<string>
using namespace std;
int main()
{    int a=0,i;
     cout<<" Welcome to ROCK PAPER SCISSORS !!! \n To enter press 1 !! \n";
     cin>>a;
    for( i=1 ; i<=10; i++ )
    {
     if(a==1)
     {   string charecter;
         cout<<" rock paper or scissors?? \n";
         cin>>charecter;
         if(charecter=="rock")
         {  cout<<"paper!!!! \n hahah you lose";
          }
          else if(charecter=="paper")
          {  cout<<" scissors !!! \n hahaha you lose";
          }
          else if(charecter=="scissor")
          {  cout<<"rock !!! \n hahah you lose";
          }
        else
        {  cout<<" You have entered a wrong choice man!! \n Sorry but i get 1 + score for it!";
        }
        cout<<"\n score is "<<i;
         
     }         
        
    }
}
